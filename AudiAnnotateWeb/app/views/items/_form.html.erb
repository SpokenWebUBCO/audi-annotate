<%= form_with(model: @item, url: create_item_path, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label %>
  </div>
  <div class="field">
    <%= form.label :audio_url, 'Audio File URL' %>
    <%= form.text_field :audio_url %>
  </div>

  <div class="field">
    <%= form.label :duration, 'Duration (seconds)' %>
    <%= form.text_field :duration %>
  </div>

  <%= form.hidden_field(:repo_name) %>
  <%= form.hidden_field(:user_name) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
