<!DOCTYPE html>
<html>
  <head>
    <title>AudiAnnotate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a class="navbar-brand" href="/">AudiAnnotate</a>
      <% if @github_client %>
        <%= @github_client.user.login %>
        <%= link_to 'Sign Out', '/user/logout' %>
      <% else %>
        <%= link_to 'Sign In', '/auth/github' %>
      <% end %>
    </nav>
    <div class="bg text-light">
      <%= yield %>
    </div>
  </body>

  <footer class="footer fixed-bottom py-1">
    <div class="container">
      <span class="text-white"><a href="https://hipstas.org/audiannotate/">About AudiAnnotate</a></span>
    </div>
  </footer>
</html>
